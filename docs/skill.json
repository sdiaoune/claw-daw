{
  "name": "claw-daw",
  "version": "0.2.0",
  "description": "Offline, deterministic, terminal-first MIDI DAW (TUI + headless scripts)",
  "homepage": "https://www.clawdaw.com/",
  "repository": "https://github.com/sdiaoune/claw-daw",
  "files": {
    "skill_md": "https://www.clawdaw.com/skill.md",
    "heartbeat_md": "https://www.clawdaw.com/heartbeat.md",
    "skill_json": "https://www.clawdaw.com/skill.json"
  },
  "install": {
    "linux": "curl -fsSL https://www.clawdaw.com/install.sh -o /tmp/clawdaw-install.sh && bash /tmp/clawdaw-install.sh",
    "macos": "curl -fsSL https://www.clawdaw.com/install_mac.sh -o /tmp/clawdaw-install.sh && bash /tmp/clawdaw-install.sh",
    "windows": "iwr https://www.clawdaw.com/install_win.ps1 -UseBasicParsing -OutFile $env:TEMP\\clawdaw-install.ps1; & $env:TEMP\\clawdaw-install.ps1"
  }
}
